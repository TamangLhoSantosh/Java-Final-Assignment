package BusinessLayer;


import DatabaseLayer.DLLogin;
import Helper.InputException;
import Models.Login;

public class BLLogin {

	//declaring variable
	private Login log;

	public BLLogin() {
	}

	public Login getLog() {
		return log;
	}

	public void setLog(Login log) throws Exception{
		try {
			if(this.ValidateLogin(log)) {
				this.log = log;
			}
		}catch (Exception ex) {
			throw ex;
		}	
	}
	
	private boolean ValidateLogin(Login log) throws InputException {
		if(this.log.getEmail() == null || this.log.getEmail().length()==0){
			throw new InputException("Email cannot be empty.");
		}
		if(this.log.getPassword() == null || this.log.getPassword().length()==0){
			throw new InputException("Password cannot be empty.");
		}
		return true;
	}
	
	public Login login() throws Exception{
		try {
			DLLogin dlLogin = new DLLogin(this.log);
			return dlLogin.login(this.log);
		}catch (Exception e) {
			throw e;
		}
	}

	public void registerValidation(Login log) {
	}
	
	
}